<script type="text/javascript"
    src="https://maps.googleapis.com/maps/api/js?sensor=false"></script>
<script type="text/javascript">
  var map;
  function initialize() {
    var hitconStyles = [
        {
          stylers: [
            { invert_lightness: true },
            { hue: "#08ff00" },
            { saturation: 100 },
            { lightness: 39 },
            { gamma: 0.48 }
          ]
        },{
          featureType: "road.highway",
          stylers: [
            { hue: "#ccff00" }
          ]
        },{
          featureType: "road.local",
          stylers: [
            { hue: "#ccff00" }
          ]
        },{
          featureType: "landscape",
          stylers: [
            { gamma: 0.57 }
          ]
        },{
          featureType: "poi.government",
          stylers: [
            { lightness: 50 },
            { hue: "#99ff00" },
            { saturation: -18 }
          ]
        },{
          featureType: "transit.station",
          stylers: [
            { hue: "#00ffff" },
            { saturation: 75 },
            { gamma: 0.92 }
          ]
        }
      ];

    var hitconMapType = new google.maps.StyledMapType(hitconStyles, {name: "Hitcon Map"});

    var myOptions = {
      zoom: 15,
      center: new google.maps.LatLng(25.04342,121.61449),
      mapTypeIds: [google.maps.MapTypeId.ROADMAP, 'hitcon_map'],
      title:"HITCON 2012"
    };

    var map = new google.maps.Map(document.getElementById("map_canvas"),myOptions);
    map.mapTypes.set('hitcon_map', hitconMapType);
    map.setMapTypeId('hitcon_map');
    
    var MarkerImage = 'images/map-marker.png';

    var marker = new google.maps.Marker({
			position: new google.maps.LatLng(25.040913,121.613438),
			animation: google.maps.Animation.DROP,
			title:"HITCON 2012",
			icon: MarkerImage
		});

		setTimeout(function(){
    	marker.setMap(map);
    }, 1000);

  }

  google.maps.event.addDomListener(window, 'load', initialize);
</script>